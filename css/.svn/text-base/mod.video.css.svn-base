.mod-video{width:100%;height:100%;position:relative}.mod-video > video{width:100%;height:100%;background-color:#000}.mod-video .mod-video__mask{position:absolute;left:0;top:0;display:none;width:100%;height:100%;background:rgba(0,0,0,0.5)}.mod-video .mod-video__mask:before{content:'';position:absolute;left:50%;top:50%;width:120px;height:120px;margin-left:-60px;margin-top:-60px;border:5px solid #fff;-webkit-border-radius:50%;-moz-border-radius:50%;border-radius:50%}.mod-video.is-play .mod-video__mask,.mod-video.is-pause .mod-video__mask{display:block}.mod-video.is-play .mod-video__mask:after{content:'';position:absolute;left:50%;top:50%;width:0;height:0;margin-left:-10px;margin-top:-30px;border-style:solid;border-width:32px 0 32px 32px;border-color:transparent transparent transparent #fff}.mod-video.is-pause .mod-video__mask:after{content:'';position:absolute;left:50%;top:50%;width:8px;height:48px;margin-left:-14px;margin-top:-22px;background-color:#fff;-webkit-box-shadow:20px 0 0 #fff;-webkit-border-radius:3px;-moz-border-radius:3px;border-radius:3px}